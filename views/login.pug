html
  head
    link(rel="stylesheet", href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css",integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm",crossorigin="anonymous")
    title= title
  body
    nav.navbar.navbar-expand.navbar-dark.bg-primary   
      a.navbar-brand(href='#') User
      button.navbar-toggler(type='button' data-toggle='collapse' data-target='#navbarNavAltMarkup' aria-controls='navbarNavAltMarkup' aria-expanded='false' aria-label='Toggle navigation')
        span.navbar-toggler-icon
      #navbarNavAltMarkup.collapse.navbar-collapse.d-flex.justify-content-end
           a(href="/auth/login")
            button.ml-auto(class="btn my-2 my-sm-0") Login 
    if error
        each error1 in error
         .alert.alert-danger.alert-dismissible.fade.show.mb-0(role='alert')
            strong=error1
            button.close(type='button', data-dismiss='alert', aria-label='Close')
              span(aria-hidden='true') &times;
    .container
        h1.mt-20 New users
        form(action="/auth/login", method="POST")
          .form-group
            div
                label( for="name") Username
                input#name(type="text" class="form-control col-6" placeholder="Enter username..." name="name" value= value ? value : "" )
            div
                label( for="name") Password
                input#name(type="password" class="form-control col-6" placeholder="Enter password..." name="password" value= value ? value : "" )
            div
                button(class="btn btn-primary") Login
        a(href = "http://localhost:3000/users") Back to Users
        br
        a(href = "http://localhost:3000/") Back to Home
        br
        a(href = "http://localhost:3000/users/create") New User
        script(src='https://code.jquery.com/jquery-3.2.1.slim.min.js' integrity='sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN' crossorigin='anonymous')
        script(src='https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js' integrity='sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q' crossorigin='anonymous')
        script(src='https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js' integrity='sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl' crossorigin='anonymous')
