extends ../common.pug

block body    
  .container
   h1 Users:
   form(action="/users/search", method="GET")
    .form-group
      label(for="name")
      .d-flex
        input#name(type="text" class="form-control" placeholder="Enter name ..." name="name")
        button(class="btn btn-primary ml-3") Search
   table.table.table-hover
    thead.thead-light
      tr
        th(scope='col') Avatar
        th(scope='col') Name
        th(scope='col') Action
    tbody
      each user in users
       tr
        td
          img(class="hi",src=user.avatar, width="50px",length="50px").rounded.mx-auto.d-block
        td.p-0.align-middle= user.name
        td.d-flex
         form.mb-0(action="/users" method="POST")
          button.btn.btn-primary.btn-sm(value=user.id, name="id",action="/users" method="POST") Delete

   a(href = "http://localhost:3000/users") Back to Users
   br
   a(href = "http://localhost:3000/") Back to Home
   br
   a(href = "http://localhost:3000/users/create") New User
   