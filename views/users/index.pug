html
  head
    link(rel="stylesheet", href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css")
    title= title
  body
  .container
   h1 Users:
   form(action="/users/search", method="GET")
    .form-group
      label(for="name")
      .d-flex
        input#name(type="text" class="form-control" placeholder="Enter name ..." name="name")
        button(class="btn btn-primary ml-3") Search
   table.table.table-hover
    thead
      tr
        th(scope='col') Name
        th(scope='col') Action
    tbody
      each user in users
       tr
        td= user.name
        td No action
   a(href = "http://localhost:3000/users") Back to Users
   br
   a(href = "http://localhost:3000/") Back to Home
   br
   a(href = "http://localhost:3000/users/create") New User
   